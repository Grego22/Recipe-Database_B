<%= form_for(@recipe, html: { class: "form-horizontal", role: "form" }) do |f| %>

  <%# Alert showing errors for this form %>
  <% if @recipe.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h4>

      <ul>
      <% @recipe.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%# ingredients %>
  <div class="form-group">
    <%= f.label :ingredients, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :ingredients, class: "form-control" %>
    </div>
  </div>


  <%# steps %>
  <div class="form-group">
    <%= f.label :steps, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :steps, class: "form-control" %>
    </div>
  </div>


  <%# prep_time %>
  <div class="form-group">
    <%= f.label :prep_time, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :prep_time, class: "form-control" %>
    </div>
  </div>


  <%# cook_time %>
  <div class="form-group">
    <%= f.label :cook_time, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :cook_time, class: "form-control" %>
    </div>
  </div>


  <%# Submit %>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end -%>
