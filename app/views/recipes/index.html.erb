<div class="page-header">
  <%= link_to new_recipe_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Recipe
  <% end %>
  <h1 Listing>Chef Gregory's Recipe Ark</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Ingredients</th>
        <th>Steps</th>
        <th>Prep time</th>
        <th>Cook time</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody class="table-body">
      <%- @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.ingredients.map %></td>
        <td><%= recipe.steps %></td>
        <td><%= recipe.prep_time %></td>
        <td><%= recipe.cook_time %></td>
        <td>
          <%= link_to recipe do %>
            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <%= link_to edit_recipe_path(recipe) do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <%= link_to recipe, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
